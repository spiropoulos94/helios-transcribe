# AI Provider Configuration
# Choose which AI provider to use: 'google-gemini' | 'openai'
# If not specified, will auto-detect based on available API keys
AI_PROVIDER=google-gemini

# Google Gemini API Key (required for google-gemini provider)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Key (required for openai provider)
OPENAI_API_KEY=your_openai_api_key_here

# Feature Flags
# Disable YouTube transcription feature (true by default)
NEXT_PUBLIC_DISABLE_YOUTUBE=true

# Audio Processing Configuration
# Enable chunking for long audio files (automatically calculates optimal chunk size)
# Chunk size is dynamically determined between 5-30 minutes based on file duration
# Recommended for files longer than 10 minutes
ENABLE_CHUNKING=true

# Maximum number of chunks to process in parallel
# 0 or 1 = sequential processing (slowest, safest)
# 2-5 = limited parallel (good balance)
# 6-10 = aggressive parallel (faster, riskier)
# -1 = UNLIMITED parallel (MAXIMUM SPEED, may hit rate limits!)
# Default: 3 (recommended balance of speed and safety)
MAX_CONCURRENT_CHUNKS=3
